.new-post-form{
  width: 100vw;
  height: auto;
  margin: 40px;
  border: 10px solid white;
  border-radius: 20px;
  padding: 40px;
  background-image: url("<%= asset_path('new_post_back.png') %>");
  background-color:rgba(192,192,192,0.5);
}  

.image-area {
  display: flex;
}

.image-label {
  width: 180px; 
  justify-content: left;
  margin: 20px 0 0 0;
  padding: 30px 80px;
  font-size: 20px;
  color: black;
}

.image-input {
  justify-content: left;  
  margin: 40px 0 0 0;
  padding: 30px 80px;
  color: black;
}

.image-input input {
  align-items: center;
  font-size: 20px;
}

.title-area {
  display: flex;
}

.title-label {
  width: 180px; 
  align-items: center;
  justify-content: left;
  margin: 20px 0 0 0;
  padding: 30px 80px;
  font-size: 20px;
  color: black;
}

.title-input {
  justify-content: left;  
  margin: 40px 0 0 0;
  padding: 30px 80px;
}

input[type="text"][name="post[title]"] {
  width: 500px;
  font-size: 16px;
}

.input-post {
  border: 2px solid #dfdfdf;
  border-radius: 10px;
}

.title-input p {
  width: 230px;
  background-color:rgba(0,255,255,0.7);
  flex-basis: auto;
}

.text-area {
  display: flex;
}

.text-label {
  width: 180px; 
  align-items: center;
  justify-content: left;
  margin: 20px 0 0 0;
  padding: 30px 80px;
  font-size: 20px;
  color: black;
  text-shadow:3px 3px 3px #CCCCCC;  
}

.text-input {
  justify-content: left; 
  margin: 40px 0 0 0;  
  padding: 30px 80px;
}

textarea[name="post[text]"]{
  width: 500px;
  height: 300px;
  font-size: 16px;
}

.text-input p {
  width: 200px;
  background-color:rgba(0,255,255,0.7);
}

.category-area {
  display: flex;
}

.category-label {
  width: 180px; 
  align-items: center;
  justify-content: left;
  margin: 20px 0 0 0;
  padding: 30px 80px;
  font-size: 20px;
  color: black;
  text-shadow:3px 3px 3px #CCCCCC;    
}

.category-input {
  justify-content: left;  
  margin: 40px 0 0 0;
  padding: 30px 80px;
}

.category-box {
  width: 200px;
  height: 35px;
  align-items: center;
  font-size: 16px;
}

.category-input p {
  width: 230px;
  background-color:rgba(0,255,255,0.7);
}

.post-btn{
  display: flex;
  justify-content: center;
}

.post-red-btn{
  font-size: 20px;
  padding: 10px 20px;
  margin: 30px 10px 20px 10px;
  border: 2px solid red;
  border-radius: 20px;
  width: 150px; 
}