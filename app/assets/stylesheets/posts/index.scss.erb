/* ヘッダー */

header {
  background-color:#f2f2f2;
  border-bottom: 2px solid white;
  box-shadow: 0px 1px 2px
}

.contents {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 30px 0;
}

.title {
  margin: auto;
}

.search-bar {
  margin: auto auto auto 40px;
  justify-content: center;
}

.search-form {
}

input[type="text"] {
  width: 400px;
  height: 40px;
}

.search-box {
}

.search-btn {
  width: 47px;
  height: 47px;
}

.search-icon {
  width: 10px;
  heidth: 10px;  
}

.header-list {
  margin: auto;
}

.header-list ul{
  display: flex;
  justify-content: center;
  align-items: center;
  list-style: none;
}

.header-list li{
  padding: 10px 20px;
  border: 4px ridge #FFAD90;
  background-color: ButtonHighlight;
}

.header-list a {
  color: black;
  text-decoration: none;
}

/* メイン */

.main-contents {
  height: 70vh;
  text-align: center;
  font-size: 25px;  
  color: black;
  background-image: url("<%= asset_path('mainback.png') %>");
  background-color:rgba(192,192,192,0.5);
  border-bottom: 2px solid white;
  box-shadow: 0px 1px 2px  
}

.main-contents p{
  margin: 0 auto;
  padding: 40px 20px;
}

/* フッター */

.footer{
  background-color: #f2f2f2;
  margin: 0 auto;
  padding: 10px 0;
}

.footer-list {
  display: flex;
  justify-content: space-around;
  list-style: none;
}